    <div class="container">
        <div class="row">
            <div class="subject-info-box-1 col-md-4">
                <h1 style="font-size: 20px;width: 200px;margin-top: 44px;margin-left: 90px;"><strong>Problems
                        Added</strong></h1>
                <select multiple="multiple" id='lstBox1' class="form-control" style="height:150px">
                    {{#testProblems}}
                    <option value="{{Problem_Id_Value}}">{{Problem_Id}}: {{Title}}</option>
                    {{/testProblems}}
                </select>
            </div>

            <div class="subject-info-arrows text-center col-md-3" style="margin-top:70px;">
                <!-- <input type='button' id='btnRight' value='Remove Problem' class="btn btn-default" /><br />
                <input type='button' id='btnLeft' value='Add Problem' class="btn btn-default" /><br /> -->
                <button class="btn btn-success" id='btnLeft' type="button" style="margin-top: 25px;">
                    Add Problem
                </button> <button id='btnRight' class="btn btn-danger" type="button" style="margin-top: 25px;">
                    Remove Problem
                </button>
            </div>

            <div class="subject-info-box-2 col-md-4">

                {{#if problems}}
                <h1 style="font-size: 20px;width: 200px;margin-top: 44px;margin-left: 90px;">
                    <strong>Problems Available</strong></h1>
               
                <select multiple="multiple" id='lstBox2' class="form-control" style="height:150px">
                    {{#problems}}
                    <option value="{{Problem_Id}}">{{Problem_Id}}: {{Title}}</option>
                 {{/problems}}
                </select>
               
                {{else}}
                <h1 style="font-size: 20px;width: 220px;margin-top: 44px;margin-left: 60px;"><strong>No Problems
                        Available</strong></h1> <select multiple="multiple" id='lstBox2' class="form-control"
                    style="height:150px"></select>

                </select>
                {{/if}}

            </div>
        </div>
    </div>
    <div style="text-align:center;">
        <button class="btn btn-primary" id="save" type="button" style="margin-top: 25px;">
            Save Test
        </button>
    </div>
